{
  "manifest_version": 3,
  "name": "ChatGPT Queue",
  "version": "1.0.0",
  "description": "Queue prompts while ChatGPT is generating. Press Alt+Enter to add to queue.",
  
  "permissions": ["storage"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content_script.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
